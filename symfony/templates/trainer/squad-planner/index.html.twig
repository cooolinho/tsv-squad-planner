{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Squad Planner' %}
{% block page_content %}
    <div class="container-fluid">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

    {% if from and to %}
        <hr>

        <h3>Birthday: {{ from|date('d.m.Y') }} - {{ to|date('d.m.Y') }}</h3>

        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>{{ 'player.club.label'|trans }}</th>
                <th>{{ 'player.firstname.label'|trans }}</th>
                <th>{{ 'player.lastname.label'|trans }}</th>
                <th>{{ 'player.birthday.label'|trans }}</th>
                <th>{{ 'player.foot.label'|trans }}</th>
                <th>{{ 'player.clothing.trainings_jacket.label'|trans }}</th>
                <th>{{ 'player.clothing.trainings_trousers.label'|trans }}</th>
                <th>{{ 'player.clothing.warm_up_shirt.label'|trans }}</th>
                <th>{{ 'player.clothing.warm_up_sweater.label'|trans }}</th>
                <th>{{ 'player.clothing.desired_size.label'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for player in players %}
                <tr>
                    <td>{{ player.club }}</td>
                    <td>{{ player.firstname }}</td>
                    <td>{{ player.lastname }}</td>
                    <td>{{ player.birthday|date('d.m.Y') }}</td>
                    <td>{{ player.footLabel|trans }}</td>
                    <td>{{ player.trainingsJacketLabel|trans }}</td>
                    <td>{{ player.trainingsTrousersLabel|trans }}</td>
                    <td>{{ player.warmUpShirtLabel|trans }}</td>
                    <td>{{ player.warmUpSweaterLabel|trans }}</td>
                    <td>{{ player.clothingDesiredSize|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
