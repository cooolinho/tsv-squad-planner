{% extends '@EasyAdmin/page/content.html.twig' %}

{% block page_title 'Squad Planner' %}
{% block page_content %}
    <div class="container-fluid">
        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>

    {% if from and to %}
        <hr>

        <h3>Birthday: {{ from|date('d.m.Y') }} - {{ to|date('d.m.Y') }}</h3>

        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Birthday</th>
                <th>Foot</th>
            </tr>
            </thead>
            <tbody>
            {% for player in players %}
                <tr>
                    <td>{{ player.firstname }}</td>
                    <td>{{ player.lastname }}</td>
                    <td>{{ player.birthday|date('d.m.Y') }}</td>
                    <td>{{ player.foot }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
